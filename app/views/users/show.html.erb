
<div class="container">

    <div class="row">
    <div class="col m4">
    <h1 class="center light-blue lighten-3 z-depth-1"><%= @user.name %></h1>
    <button class="left offset-"><%= link_to("Leave a Review", new_rating_path) %></button> 
    </div>
      <div class="col m6 right">
        <div class="center card contact-info tiny post #40c4ff light-blue accent-2">
          <div class="card-title">Contact Info</div>
          <div class="card-content">
          Username: <%= @user.name %></h2></br>
          Phone Number:<%= @user.phone_num %></h2><br>
          Email: <%= @user.email %></h2><br>
          Skype:<%= @user.skype %></h2><br>
          Whatsapp: <%= @user.whatsapp %></h2><br>
          </div>
        </div>
      </div>

<div class="row">
  <% @ratings.each do |r| %>
  <div class="col m8 offset-m2">

    <div class="card medium post #e1f5fe light-blue lighten-5">

    <div class="card-title">
      <h2>Title:<%= r.title %></h2>
      <h4>Rating:<%= r.rating %></h4>
    </div>

    <div class="card-content">
      <h4>Comment:<%= r.comment %></h4>
    </div>

    <div class="card-action">
      <%=link_to("see review", "/ratings/#{r.id}") %>
    </div>


    </div>

  </div>
  <% end %>
</div>

  
</div>