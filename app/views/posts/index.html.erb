<div class="container">
<div class="row">
<h1 class="col s10 offset-s1 z-depth-1 #81d4fa light-blue lighten-3">Help Wanted Message Board</h1>
</div>
  <% @posts.each do |post| %>
  <div class="row">
  <div class="col s8 offset-s2">
    <div class="card medium post #e1f5fe light-blue lighten-5">
        <div class="card-title">
        <h2><%= post.title %></h2>
        </div>
        <div class="card-content center">
        <h4>Topic:  <%= post.topic %></h4>
        <h4><%= post.content %></h4>
        </div>
        <div class="links card-action">
          <%= link_to("user profile page", "../users/#{post.user_id}")%>
          <%= link_to("comment on post", "/posts/#{post.id}") %> 
        	<%= link_to("delete the post", "/posts/#{post.id}", :method => "delete") %>
        </div>
    </div>
  </div>
  </div>
  <% end %>
</div>
</div>